
@model IEnumerable<MovieApplication.Models.Actor>
@{
    ViewBag.Title = "IndexActor";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Add New Actor", "AddActor")
</p>

<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Awards)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(x => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(x => item.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Awards)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                </td>
            </tr>

        }
    </tbody>



</table>